datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

enum Role {
  USER
  ADMIN
}

model User {
  id              String    @id @default(cuid())
  providerId      Int       @unique
  provider        String
  avatar          String?
  cover           String?
  name            String
  email           String?   @unique
  role            Role      @default(USER)
  github          String?
  discord         String?
  website         String?
  twitter         String?
  bio             String?
  location        String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
  projects        Project[]
  projectsLiked   Project[] @relation("ProjectstLiked")
  followers       User[]    @relation(name: "UserFollower")
  following       User[]    @relation(name: "UserFollowing")
  followerCount   Int       @default(0)
  followingCount  Int       @default(0)
  UserFollower    User?     @relation("UserFollower", fields: [userFollowerId], references: [id])
  UserFollowing   User?     @relation("UserFollowing", fields: [userFollowingId], references: [id])
  userFollowerId  String?
  userFollowingId String?
}

model Project {
  id          String   @id @default(cuid())
  title       String
  preview     String
  repoLink    String
  siteLink    String
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  description String
  likes       User[]   @relation(name: "ProjectstLiked")
  likesCount  Int
  isApproved  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  tags        String[]
}
