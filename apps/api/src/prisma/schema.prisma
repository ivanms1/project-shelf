datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

enum Role {
  USER
  ADMIN
}

model User {
  id              String    @id @default(cuid())
  providerId      Int       @unique
  provider        String
  avatar          String?
  cover           String?
  name            String
  email           String?   @unique
  role            Role      @default(USER)
  github          String?
  discord         String?
  website         String?
  twitter         String?
  bio             String?
  location        String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
  projects        Project[]
  followers       User[]    @relation(name: "UserFollower")
  following       User[]    @relation(name: "UserFollowing")
  UserFollower    User?     @relation("UserFollower", fields: [userFollowerId], references: [id])
  UserFollowing   User?     @relation("UserFollowing", fields: [userFollowingId], references: [id])
  userFollowerId  String?
  userFollowingId String?
  Like            Like[]    @relation("UserLikeId")
  AuthorLike      Like[]    @relation("AuthorLikeId")
  banned          Boolean   @default(false)
  Report          Report[]
}

model Project {
  id          String   @id @default(cuid())
  title       String
  preview     String
  repoLink    String
  siteLink    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String
  description String
  isApproved  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  tags        String[]
  Like        Like[]
  Report      Report[]
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  user      User     @relation("UserLikeId", fields: [userId], references: [id])
  userId    String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  author    User     @relation("AuthorLikeId", fields: [authorId], references: [id])
  authorId  String

  @@unique([userId, projectId])
}

model Report {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  reason     String
  message    String?
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId  String
  reporter   User     @relation(fields: [reporterId], references: [id], onDelete: Cascade)
  reporterId String

  @@unique([projectId, reporterId])
}
