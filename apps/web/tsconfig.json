{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/assets/*": ["public/assets/*"],
      "@/helpers/*": ["helpers/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/pages/*": ["src/pages/*"],
      "@/graphql/*": ["src/graphql/*"],
      "@/store/*": ["store/*"],
      "@/types/*": ["src/types/*"]
    }
  }
}
